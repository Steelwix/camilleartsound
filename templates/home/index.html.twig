{% extends 'base.html.twig' %}

{% block body %}
    <div id="homepage">
        {% include "_partials/_light_nav.html.twig" %}

        <div id="home" class="container-fluid p-0" style="position: relative; height: 100vh; overflow: hidden;">
            {% set ext = headerMedia.name|split('.')|last|lower %}

            {% if ext in ['jpg', 'jpeg', 'png', 'gif'] %}
                <div style="
                        background-image: url('{{ asset('upload/header/' ~ headerMedia) }}');
                        background-size: cover; background-position: center;
                        position: absolute; top: 0; left: 0; width: 100%; height: 100%;
                        z-index: -1;">
                </div>
            {% elseif ext in ['mp4', 'webm'] %}
                <video autoplay loop muted playsinline style="
            width: 100%; height: 100%; object-fit: cover;
            position: absolute; top: 0; left: 0;
            z-index: -1;">
                    <source src="{{ asset('upload/header/' ~ headerMedia.name) }}" type="video/{{ ext }}">
                    Votre navigateur ne supporte pas la vidéo.
                </video>
            {% else %}
                <p>Format non supporté</p>
            {% endif %}



                <div class="text-center row">
                    <h1 style="" class="header-title text-white col-12 breathing">Camille SABY</h1>
                    <h4 class="header-subtitle text-white col-12 breathing">▲ Sound Designer // Technical SD ▼</h4>

                    <div class="col-12  breathing">
                        <a class="btn btn-outline-light text-white mx-5">Show reel</a>
                        <a class="btn btn-outline-light text-white mx-5">Technical demo</a>

                    </div>
                    <div class="col-12 col-md-6 breathing">
                    </div>
                </div>

            </div>
        </div>
        <div style="min-height: 100vh" id="work" class="container">
            <div class="row">
                <div class="col-12 mt-5 mb-5">
                    <h3 class="text-center">ShowReel 2024</h3>
                </div>
                <div class="col-12 col-md-6 mx-auto">
                    <video class="w-100" controls>
                        <source src="{{ asset('upload/showreel/' ~ showreel.name) }}" type="video/{{ ext }}">
                        This video seems unsupported by your browser
                    </video>
                </div>
                <div class="col-12 mt-5 mb-5">
                    <h5 class="text-center">Selected Work</h5>
                </div>


                {% set total = projectDisplay %}
                {% set perRow = projectPerRow %}

                {% for i in 1..total %}
                    {% if (i - 1) % perRow == 0 %}
                        <div class="row mb-4">
                    {% endif %}

                    <div class="col">
                        <div class="card">
                            <div class="card-body bg-dark">
                                {% if projects[i] is not null %}
                                    <video class="w-100" controls>
                                        <source src="{{ asset('upload/project' ~ i ~ '/' ~ projects[i].name) }}" type="video/{{ ext }}">
                                        This video seems unsupported by your browser
                                    </video>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if i % perRow == 0 or i == total %}
                        </div>
                    {% endif %}
                {% endfor %}

            </div>
        </div>
        <div id="about" class="container-fluid p-4 text-dark" style="background-color: #e3d8f1;">
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="row">
                        <div class="col-6 mx-auto w-25">
                            <img class="img-fluid mx-auto rounded-circle"
                                 src="https://preview.redd.it/new-profile-pictures-for-yall-v0-ul96as2xte3c1.jpg?width=640&crop=smart&auto=webp&s=43f47ff0ad6fcb44abddc1490c496bfbcf0a0458"
                                 alt="Photo de profil">
                        </div>
                        <div class="col-md-6 my-auto">
                            <h5>Camille Saby</h5>
                            <p>As a passionate sound designer and digital art enthusiast, I aim to work in video game
                                industry. Sound inspires me as a living material to shape and transform, with sound
                                synthesis offering a playground for creating immersive atmospheres and innovative
                                soundscapes.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-bottom: 35vh" class="container">
            <div class="row">
                <div class="col-12 mt-5 mb-5 text-center">
                    <h3>CONTACT ME</h3>
                    <p>Camille SABY</p>
                    <p>Sound Designer</p>
                    <p>France, LYON</p>
                    <a style="color:#ff5a5f ;text-decoration: none" href="mailto:cs.sabycamille@gmail.com">cs.sabycamille@gmail.com</a>
                </div>
                <div class="col-12 text-center">
                    <i class=" bi bi-linkedin fs-2 me-3"></i>
                    <i class=" bi bi-linkedin fs-2"></i>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
